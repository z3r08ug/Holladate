<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setupProfilePicCIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile" />

    <ScrollView
        android:id="@+id/setupSV"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_below="@id/setupProfilePicCIV">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/setupUsernameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/username"
                android:ems="10"
                android:hint="username..."
                android:padding="14dp" />

            <EditText
                android:id="@+id/setupFullNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setupUsernameET"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/name"
                android:ems="10"
                android:hint="full name..."
                android:inputType="textMultiLine"
                android:padding="14dp" />

            <EditText
                android:id="@+id/setupCountryET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setupFullNameET"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/country"
                android:ems="10"
                android:hint="country..."
                android:inputType="textMultiLine"
                android:padding="14dp" />

            <EditText
                android:id="@+id/setupAgeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setupCountryET"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/name"
                android:ems="10"
                android:hint="Age..."
                android:inputType="number"
                android:padding="14dp" />

            <EditText
                android:id="@+id/setupLocationET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setupAgeET"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/name"
                android:ems="10"
                android:hint="Location..."
                android:inputType="textAutoComplete"
                android:padding="14dp" />

            <EditText
                android:id="@+id/setupCategoryET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setupLocationET"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/name"
                android:ems="10"
                android:hint="Category..."
                android:inputType="text"
                android:padding="14dp" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/setupSaveBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:padding="14dp"
        android:text="Save"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>